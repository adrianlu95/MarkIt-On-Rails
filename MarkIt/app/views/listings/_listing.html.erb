<li id="listing-<%= listing.id %>">
  <span class="user"><%= link_to listing.user.firstname, listing.user %></span>
  <span class="title"><%= listing.title %></span>
  <span class="description"><%= listing.description %></span>
  <span class="price">$<%= listing.price %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(listing.created_at) %> ago.
  </span>
</li>

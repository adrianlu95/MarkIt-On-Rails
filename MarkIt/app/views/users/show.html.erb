<% provide(:title, "Profile") %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.firstname %> <%= @user.lastname %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.listings.any? %>
      <h3>Listings (<%= @user.listings.count %>)</h3>
      <ol class="listings">
        <%= render @listings %>
      </ol>
      <%= will_paginate @listings %>
    <% end %>
  </div>
</div>
